<header> 
      <div class="header d-flex justify-content-start p-3 "> 
      <div class="d-flex flex-column">
        <h1><em>Business cards</em></h1>
        <p>Koroka Solutions candidate evaluation task</p>
      </div>
</header>
<section>
<div dataMaxValue="<%- data.length %>" class="container CardHolder d-flex align-content-start justify-content-center flex-wrap mt-4">
    <% for(var i=0; i<6; i++) {%>
      <div dataid="<%= data[i].id %>" class="card mt-3 ml-2 mr-2">
        <div class="card-body d-flex">
          <img src=<%= data[i].avatar %> alt="">
          <div class="align-self-center ml-3">
          <h5 class="card-title"><%= data[i].first_name+" "+ data[i].last_name%></h5>
          <p class="card-text"><%= data[i].email %></p>
          <input class='ids d-none'value="<%= data[i].id %>"></input>
        </div>
        </div>
      </div>
    <% } %>
</section>

<div class='d-flex justify-content-center m-auto'>
  <button type="button" class="btn Load btn-primary mt-3">Load more</button>
</div>
</div>

